<div class="container">
    <br><br><br><br><br><br>
    <div class="row">
        <div class="col">
            <h1><%= title %></h1>
            <br><br>
        <%if(typeof displayName =='string' && displayName){%>
        <a href="add-contact" class="btn btn-primary" role="button">
            <i class ="fas fa-plus-circle"></i>Add a Contact</a>
            <%}%>
        <br><br><br>
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col" class="text-center">Contact Name</th>
                        <th scope="col" class="text-center">Contact Number</th>
                        <th scope="col" class="text-center">Email Address</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="businessContactList">
                    <!-- repeatable rows -->
                    <% for(let count = 0; count < contacts.length; count++){%>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td class="text-center"><%= contacts[count].Name %></td>
                            <td class="text-center"><%= contacts[count].Number %></td>
                            <td class="text-center"><%= contacts[count].Email %></td>
                            <td class="text-center"><a href="/update-contact<%=contacts[count]._id%>" class="btn btn-primary">Update</a></td>
                            <td class="text-center"><a href="/delete-contact<%=contacts[count]._id%>" class="btn btn-primary">Delete</a></td>
                        </tr>
                    <% } %>  
                </tbody>
            </table>
        </div>
    </div>
</div>